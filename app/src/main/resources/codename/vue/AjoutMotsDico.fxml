<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="codename.controleur.AjoutMotsDicoControleur"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@/public/modifDicoStyle.css">

    <top>
        <VBox spacing="10.0" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Thème existant :" />
                <ComboBox fx:id="themeComboBox" promptText="Sélectionner un thème..." />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Nouveau thème :" />
                <TextField fx:id="newThemeTextField" promptText="Saisir un nom de thème" />
                <TextField fx:id="newThemeWordTextField" promptText="Premier mot du nouveau thème" />
                <Button fx:id="addNewThemeButton" text="Créer le thème" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10.0" alignment="CENTER" BorderPane.alignment="CENTER">
            <Label text="Mots du thème sélectionné :" />
            <ListView fx:id="wordsListView" prefHeight="200.0" prefWidth="150.0"/>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10.0" alignment="CENTER" BorderPane.alignment="CENTER">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Ajouter un mot :" />
                <TextField fx:id="addWordTextField" promptText="Saisir un nouveau mot" />
                <Button fx:id="addWordButton" text="Ajouter" />
            </HBox>

            <Button fx:id="resetDictButton"
                    text="Réinitialiser le dictionnaire"
                    style="-fx-font-weight: bold;"
                    onAction="#handleReinitialiserDictionnaire" />
        </VBox>
    </bottom>

</BorderPane>
