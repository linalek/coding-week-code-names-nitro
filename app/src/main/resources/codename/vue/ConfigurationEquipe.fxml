<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="codename.controleur.ConfigurationEquipeControleur"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Titre principal -->
    <top>
        <StackPane alignment="CENTER" style="-fx-background-color: #4a4a4a;">
            <Label text="Configuration des Équipes"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </StackPane>
    </top>

    <!-- Contenu central -->
    <center>
        <HBox spacing="50" alignment="CENTER">

            <!-- Colonne Équipe Rouge -->
            <VBox spacing="30" alignment="CENTER"
                  style="-fx-background-color: rgba(255, 221, 221, 0.8);
                     -fx-padding: 30;
                     -fx-border-radius: 10;
                     -fx-background-radius: 10;">
                <Label text="Équipe Rouge"
                       style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: red;"/>

                <HBox spacing="15" alignment="CENTER">
                    <Label text="Nom de l'Agent :"
                           style="-fx-font-size: 20px;"/>
                    <TextField fx:id="nomAgentRouge" prefWidth="200"/>
                </HBox>

                <HBox spacing="15" alignment="CENTER">
                    <Label text="Nom de l'Espion :"
                           style="-fx-font-size: 20px;"/>
                    <TextField fx:id="nomEspionRouge" prefWidth="200"/>
                </HBox>
            </VBox>

            <!-- Colonne Équipe Bleue -->
            <VBox spacing="30" alignment="CENTER"
                  style="-fx-background-color: rgba(221, 238, 255, 0.8);
                     -fx-padding: 30;
                     -fx-border-radius: 10;
                     -fx-background-radius: 10;">
                <Label text="Équipe Bleue"
                       style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: blue;"/>

                <HBox spacing="15" alignment="CENTER">
                    <Label text="Nom de l'Agent :"
                           style="-fx-font-size: 20px;"/>
                    <TextField fx:id="nomAgentBleu" prefWidth="200"/>
                </HBox>

                <HBox spacing="15" alignment="CENTER">
                    <Label text="Nom de l'Espion :"
                           style="-fx-font-size: 20px;"/>
                    <TextField fx:id="nomEspionBleu" prefWidth="200"/>
                </HBox>
            </VBox>

        </HBox>
    </center>


    <!-- Boutons bas de page -->
    <bottom>
        <HBox spacing="30" alignment="CENTER"
              style="-fx-padding: 15; -fx-background-color: #4a4a4a;">
            <Button text="Valider"
                    onAction="#validerEquipes"
                    style="-fx-font-size: 18px; -fx-text-fill: white; -fx-background-color: #4caf50;"/>
            <Button text="Annuler"
                    onAction="#annuler"
                    style="-fx-font-size: 18px; -fx-text-fill: white; -fx-background-color: #f44336;"/>
        </HBox>
    </bottom>

</BorderPane>
