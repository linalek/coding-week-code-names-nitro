<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="codename.controleur.ConfigurationEquipeControleur"
            prefHeight="400.0" prefWidth="600.0"
            styleClass="background"
            stylesheets="@/public/styles.css">

    <top>
        <Label text="Configuration des Équipes"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"
               alignment="CENTER"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <HBox spacing="50" alignment="CENTER">

            <!-- Colonne Équipe Rouge -->
            <VBox spacing="20" alignment="CENTER">
                <Label text="Équipe Rouge" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: red;"/>

                <Label text="Nom de l'Agent :"/>
                <TextField fx:id="nomAgentRouge"/>

                <Label text="Nom de l'Espion :"/>
                <TextField fx:id="nomEspionRouge"/>
            </VBox>

            <!-- Colonne Équipe Bleue -->
            <VBox spacing="20" alignment="CENTER">
                <Label text="Équipe Bleue" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: blue;"/>

                <Label text="Nom de l'Agent :"/>
                <TextField fx:id="nomAgentBleu"/>

                <Label text="Nom de l'Espion :"/>
                <TextField fx:id="nomEspionBleu"/>
            </VBox>

        </HBox>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER">
            <Button text="Valider" onAction="#validerEquipes" style="-fx-font-size: 14px;"/>
            <Button text="Annuler" onAction="#annuler" style="-fx-font-size: 14px;"/>
        </HBox>
    </bottom>

</BorderPane>
