<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<!--Vue de la page d'accueil -->

<StackPane fx:id="accueil" prefHeight="400.0" prefWidth="600.0" styleClass="background" stylesheets="@/public/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="codename.controleur.AccueilControleur">
    <Button mnemonicParsing="false" onAction="#handleJouer" styleClass="buttonJouer" text="JOUER">
        <font>
            <Font name="Comic Sans MS Bold" size="21.0" />
        </font>
    </Button>
    <!-- Bouton pour jouer/pause la musique (lié à playPauseButton) -->
    <Button fx:id="playPauseButton" mnemonicParsing="false" text="Musique" styleClass="buttonMusique">
        <StackPane.margin>
            <Insets top="220.0" />
        </StackPane.margin>
        <font>
            <Font size="15.0" />
        </font>
    </Button>
    
    <!-- Slider pour le volume (lié à volumeSlider) -->
    <Slider fx:id="volumeSlider" maxWidth="150.0" prefHeight="16.0" prefWidth="200.0" styleClass="slider">
        <StackPane.margin>
            <Insets top="270.0" />
        </StackPane.margin>
    </Slider>
</StackPane>
