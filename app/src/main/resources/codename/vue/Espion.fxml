<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="codename.controleur.EspionControleur">
    <center>
        <fx:include source="Plateau.fxml" />
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Donnez un indice :">
                    <font>
                        <Font name="Comic Sans MS Bold" size="21.0" />
                    </font>
                    <style>
                        -fx-text-fill: white;
                    </style>
                </Label>
                <TextField fx:id="indiceTextField" />
                <SplitMenuButton fx:id="nombreCartesButton" mnemonicParsing="false" text="Nombre de cartes">
                    <items>
                        <MenuItem mnemonicParsing="false" text="1" onAction="#handleNombreCartesSelection" />
                        <MenuItem mnemonicParsing="false" text="2" onAction="#handleNombreCartesSelection" />
                        <MenuItem mnemonicParsing="false" text="3" onAction="#handleNombreCartesSelection" />
                        <MenuItem mnemonicParsing="false" text="4" onAction="#handleNombreCartesSelection" />
                        <MenuItem mnemonicParsing="false" text="5" onAction="#handleNombreCartesSelection" />
                        <MenuItem mnemonicParsing="false" text="6" onAction="#handleNombreCartesSelection" />
                        <MenuItem mnemonicParsing="false" text="7" onAction="#handleNombreCartesSelection" />
                        <MenuItem mnemonicParsing="false" text="8" onAction="#handleNombreCartesSelection" />
                        <MenuItem mnemonicParsing="false" text="9" onAction="#handleNombreCartesSelection" />
                        <MenuItem mnemonicParsing="false" text="10" onAction="#handleNombreCartesSelection" />
                    </items>
                </SplitMenuButton>
                <Button mnemonicParsing="false"
                        text="Valider"
                        onAction="#handleValider"
                        styleClass="buttonValider">
                    <font>
                        <Font name="Comic Sans MS Bold" size="21.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
